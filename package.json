{
  "name": "acapra-platform",
  "version": "1.0.0",
  "description": "Plataforma para catálogo de animais e área administrativa da ACAPRA",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "npm install && cd client && npm install && npm run build",
    "install-client": "cd client && npm install",
    "full-start": "concurrently \"npm start\" \"npm run client\"",
    "setup": "npm install && cd client && npm install && cd .. && node test-admin.js",
    "render-build": "npm install && npm run install-client && cd client && npm run build"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "ong",
    "animais",
    "adocao",
    "acapra"
  ],
  "author": "ACAPRA",
  "license": "MIT"
}
